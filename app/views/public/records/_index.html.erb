<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th>User</th>
      <th>Image</th>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% records.each do |record| %>
      <tr>
        <td>
          <%= link_to(record.user) do %>
          <%= record.user.name %>
          <% end %>
        </td>
        <td>
          <%= link_to(record) do %>
           <%= image_tag record.get_image, size:'50x50' %>
          <% end %><br>
          <%= l record.created_at %>
        </td>
        <td><%= link_to record.title,record, class: "record_#{record.id}" %></td>
        <td><%= record.body %></td>
        <td class=<%= "favorite-" + record.id.to_s %> >
            <%= render "public/favorites/btn", record: record %>
        </td>
        <td><%= render "public/social_comments/counter", record: record %></td>
      </tr>
    <% end %>
  </tbody>
</table>