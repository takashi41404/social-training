<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <%= link_to new_record_path do %>
        <h2 class="mt-3">New record</h2>
      <% end %>
      <h2>User info</h2>
      <%= render 'public/users/info', user: @user %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <h2>Records</h2>
      <%= render 'public/records/index',records: @records %>
    </div>
  </div>
</div>