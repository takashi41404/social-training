<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th>User</th>
      <th>Image</th>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @records.each do |record| %>
      <tr>
        <td>
          <%= link_to  admin_user_path(record.user) do %>
          <%= record.user.name %>
          <% end %>
        </td>
        <td>
          <%= link_to admin_record_path(record) do %>
           <%= image_tag record.get_image, size:'50x50' %>
          <% end %><br>
          <%= l record.created_at %>
        </td>
        <td><%= record.title %></td>
        <td><%= record.body %></td>
      </tr>
    <% end %>
  </tbody>
</table>